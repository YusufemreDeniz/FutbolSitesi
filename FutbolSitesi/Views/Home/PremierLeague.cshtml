@model List<FutbolSitesi.Models.PremierLeagueTeamViewModel>

@{
    ViewData["Title"] = "Premier Lig";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 20px;
    }

    h2 {
        color: #343a40;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
            background-color: #343a40;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .img-thumbnail {
        border-radius: 50%;
        margin-right: 10px;
    }

    .coach-name {
        text-transform: uppercase;
    }

    .team-name {
        text-transform: uppercase;
        vertical-align: top;
    }

    .team-link {
        color: #007bff;
        text-decoration: none;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

        .team-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">Premier Lig</h2>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Takım</th>
                <th>Oynanan Maç</th>
                <th>Galibiyet</th>
                <th>Beraberlik</th>
                <th>Mağlubiyet</th>
                <th>Atılan Gol</th>
                <th>Yenilen Gol</th>
                <th>Averaj</th>
                <th>Puan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td class="team-name">
                        <a href="@Url.Action("Details", "Team", new { id = team.TeamId })" class="team-link">
                            <img src="@team.ImageUrl" alt="@team.Name" class="img-thumbnail" style="width:50px;height:50px;" />
                            @team.Name
                        </a>
                    </td>
                    <td>@team.MatchesPlayed</td>
                    <td>@team.Wins</td>
                    <td>@team.Draws</td>
                    <td>@team.Losses</td>
                    <td>@team.GoalsScored</td>
                    <td>@team.GoalsConceded</td>
                    <td>@team.GoalDifference</td>
                    <td>@team.Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // Takım listesini al
            $.get('@Url.Action("GetTeams", "Team")', function (teams) {
                console.log(teams); // Konsola yazdır
            });
        });
    </script>
}